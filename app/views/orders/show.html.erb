
<section class="orders-show">
<header class="page-header">
<h1>Order #<%= @order.id %></h1>
</header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @combo_arr.each do |line, product| %>
          <%= render 'item', quantity: line[:quantity].to_i, total_price: line[:total_price_cents], product: product[0] %>
          <% pp product[0].name %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">
            TOTAL:
          </th>
          <th>
          <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  
  <div class="d-flex justify-content-center align-items-center">
  <div>An email with your receiept has been sent to: <%=@order.email%></div>
  </div>
  <br>
  <div class="d-flex justify-content-center align-items-center">
  <div><%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %></div>
  </div>

</section>
